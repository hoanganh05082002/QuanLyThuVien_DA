<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Home FITHOU LIB</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!-- Custom fonts for this template-->
    <link href="~/Interface/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

    <!-- Custom styles for this template-->
    <link href="~/Interface/css/sb-admin-2.min.css" rel="stylesheet">
</head>

<body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                    <!-- Sidebar - Brand -->
                    <a class="sidebar-brand d-flex align-items-center justify-content-center" href="~/Home/Index">
                        <div class="sidebar-brand-text mx-3 d-flex align-items-center">
                            <img src="~/Image/FITHOULIB-Logo.png" alt="FITHOU LIB" class="img-fluid" />
                            <span class="text-dark">FITHOU<sup>LIB</sup></span>
                        </div>
                    </a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="~/Home/InforFITHOU">Thông tin chung</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="~/Forum/Index">Diễn đàn trao đổi</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="~/DeXuatTheLoai/Create">Gửi yêu cầu</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" href="~/News/Index">Tin tức và sự kiện</a>
                            </li>

                        </ul>
                    </div>

                </nav>
            </div>
            <main role="main">
                @RenderBody()
            </main>
                <footer class="sticky-footer bg-white">
                    <div class="container my-auto">
                        <div class="copyright text-center my-auto mb-4">
                            <span>&copy; FITHOU-LIB 2024</span>
                        </div>
                    </div>
                </footer>
            

            <!-- End of Footer -->
        </div>
        <!-- End of Content Wrapper -->
    </div>
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
    <!-- Bootstrap core JavaScript-->
    <script src="~/Interface/vendor/jquery/jquery.min.js"></script>
    <script src="~/Interface/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/Interface/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/Interface/js/sb-admin-2.min.js"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>

</html>

<style>
    .sidebar-brand .sidebar-brand-text img {
        max-height: 70px;
        height: auto;
        width: auto;
    }
    .nav-item .nav-link {
        font-size: 1rem; /* Kích thước chữ */
        font-weight: bold;
    }
    .sidebar-brand-text span {
        color: #b7b9cc; /* Màu chữ */
        font-size: 1.5rem; /* Kích thước chữ */
        font-weight: bold;
    }
    span{
        color: black;
    }
    navbar {
        position: fixed
    }
</style>