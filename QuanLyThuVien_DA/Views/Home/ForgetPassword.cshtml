
@{
    ViewBag.Title = "ForgetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-xl-10 col-lg-12 col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-3">Quên mật khẩu?</h1>
                                <p class="mb-4">Nhập địa chỉ email của bạn và chúng tôi sẽ gửi cho bạn một liên kết để đặt lại mật khẩu.</p>
                            </div>
                            <form class="user" method="post" action="~/Home/ForgetPassword">
                                <div class="form-group">
                                    <input type="email" class="form-control form-control-user" name="Email" placeholder="Nhập địa chỉ email..." required>
                                </div>
                                @if (ViewBag.ErrorMessage != null)
                                {
                                    <div class="alert alert-danger" role="alert">
                                        @ViewBag.ErrorMessage
                                    </div>
                                }
                                <div class="form-group text-center">
                                    <button type="submit" class="btn btn-primary btn-user">
                                        Gửi liên kết đặt lại mật khẩu
                                    </button>
                                </div>
                                @if (ViewBag.SuccessMessage != null)
                                {
                                    <div class="alert alert-success" role="alert">
                                        @ViewBag.SuccessMessage
                                    </div>
                                }
                            </form>
                            <hr>
                            <div class="text-center">
                                <a class="small" href="~/Home/Login">Đăng nhập</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

