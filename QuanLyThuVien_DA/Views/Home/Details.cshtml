@model QuanLyThuVien_DA.Models.FITHOU_LIB_DocumentsDetailView

@{
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

@{
    var userID = Session["UserID"];
    var userName = Session["UserName"];
    var userRole = Session["UserRole"];
}

<h2 class="mt-4 text-center font-weight-bold mb-4 text-primary">@Model.TenTaiLieu</h2>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <img src="@Url.Content("~/Image/" + Model.AnhNen)" class="img-fluid custom-img-details" alt="@Model.TenTaiLieu">
        </div>
        <div class="col-md-6">
            <p><strong>Tiêu đề:</strong> @Model.TieuDe</p>
            <p><strong>Thể loại:</strong> @Model.TenTheLoai</p>
            <p><strong>Tác giả:</strong> @Model.TacGia</p>
            <p><strong>Mô tả:</strong> @Model.MoTa</p>
            <p><strong>Năm xuất bản:</strong> @Model.NamXB</p>
            <!-- Assuming you are using Razor syntax -->
            <p>
                <strong>Từ khóa tự do:</strong>
                @if (!string.IsNullOrEmpty(Model.TuKhoaTuDo))
                {
                    var keywords = Model.TuKhoaTuDo.Split(','); // Assuming keywords are comma-separated
                    foreach (var keyword in keywords)
                    {
                        <a href="@Url.Action("Index", "Home", new { searchTerm = keyword.Trim() })" class="keyword-link">@keyword</a>
                        <span>; </span> <!-- Add a separator between keywords -->
                    }
                }
            </p>

            <p><strong>Ngày tải:</strong> @Model.NgayTai.ToString("dd/MM/yyyy")</p>

            <p><strong>Số lượt truy cập:</strong> @Model.SoLuotTruyCap</p>
            @if (userID != null)
            {
                <a href="@Url.Content("~/Documents/" + Model.FileTaiLieu)" class="btn btn-primary">Xem tài liệu</a>
            }
            else
            {
                <a href="@Url.Action("Login", "Home")" class="btn btn-primary">Đăng nhập để xem</a>
            }
        </div>
    </div>

    <h2 class="font-weight-bold mt-5 mb-4 text-primary text-center">Tài liệu liên quan</h2>
    <div class="row justify-content-center">
        @foreach (var relatedDocument in Model.RelatedDocuments)
        {
            <div class="col-five col-sm-6 mb-4">
                <div class="card">
                    <a href="@Url.Action("Details", "Home", new { id = relatedDocument.ID })">
                        <img src="@Url.Content("~/Image/" + relatedDocument.AnhNen)" class="card-img-top" alt="@relatedDocument.TenTaiLieu">
                    </a>
                    <div class="card-body mb-5">
                        <h5 class="card-title" data-toggle="tooltip" title="@relatedDocument.TenTaiLieu">
                            <a href="@Url.Action("Details", "Home", new { id = relatedDocument.ID })" class="text-black">@relatedDocument.TenTaiLieu</a>
                        </h5>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .custom-img-details {
        max-width: 50%;
        height: auto;
        display: block;
        margin: 0 auto;
    }
    .card-img-top {
        width: 100%; /* Đảm bảo ảnh rộng bằng 100% chiều rộng của thẻ cha */
        height: auto; /* Đảm bảo chiều cao tự điều chỉnh để giữ tỷ lệ */
        object-fit: cover; /* Đảm bảo ảnh không bị bóp méo, đầy đủ kích thước và căn giữa */
        max-width: 100%; /* Giới hạn kích thước tối đa của ảnh */
        max-height: 200px; /* Giới hạn chiều cao tối đa của ảnh để tránh quá lớn */
    }


    .card-fixed-size {
        width: 300px; /* Fixed width */
        height: 400px; /* Fixed height */
        overflow: hidden; /* Hide overflow content */
        border: none; /* Remove border */
        box-shadow: 0 4px 8px rgba(0,0,0,0.1); /* Optional: Add shadow for a subtle effect */
    }

        .card-fixed-size img {
            width: 100%; /* Make image fit the width of the card */
            height: auto; /* Maintain aspect ratio */
        }

        .card-fixed-size .card-body {
            overflow-y: auto; /* Add vertical scroll if content overflows */
        }

    p {
        color: black;
    }

    .col-five {
        width: 20%;
        max-width: 20%;
    }
</style>
